@model B221200015_WP_ODEV.Models.Asistan

@{
    ViewData["Title"] = "Asistan Güncelle";
}

<div class="container mt-4">
    <h2 class="text-center">Asistan Güncelle</h2>
    <form asp-controller = "Asistan" asp-action="AsistanUpdate" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <label for="Ad">Ad</label>
            <input type="text" name="Ad" class="form-control" value="@Model.Ad" required />
        </div>
        <div class="form-group">
            <label for="Soyad">Soyad</label>
            <input type="text" name="Soyad" class="form-control" value="@Model.Soyad" required />
        </div>
        <div class="form-group">
            <label for="Telefon">Telefon</label>
            <input type="text" name="Telefon" class="form-control" value="@Model.Telefon" required />
        </div>
        <div class="form-group">
            <label for="Mail">E-posta</label>
            <input type="email" name="Mail" class="form-control" value="@Model.Mail" required />
        </div>
        <div class="form-group">
            <label for="BolumId">Bölüm</label>
            <select name="BolumId" class="form-control">
                @foreach (var bolum in ViewBag.Bolumler as List<B221200015_WP_ODEV.Models.Bolum>)
                {
                    if (bolum.Id == Model.BolumId)
                    {
                        <option value="@bolum.Id" selected>@bolum.BolumAdi</option>
                    }
                    else
                    {
                        <option value="@bolum.Id">@bolum.BolumAdi</option>
                    }
                }
            </select>
        </div>
        <button type="submit" class="btn btn-success mt-3">Kaydet</button>
    </form>
</div>