@{
    ViewData["Title"] = "Yeni Bölüm Ekle";
}

@model B221200015_WP_ODEV.Models.Bolum

<div class="container mt-4">
    <h2 class="text-center">Yeni Bolum Ekle</h2>
    <form asp-controller="Bolum" asp-action="BolumAdd" method="post">
        <div class="form-group">
            <label asp-for="BolumAdi">Bolum Adı</label>
            <input asp-for="BolumAdi" class="form-control" type="text" />
            <span asp-validation-for="BolumAdi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HastaSayisi">Hasta Sayısı</label>
            <input asp-for="HastaSayisi" class="form-control" type="text" />
            <span asp-validation-for="HastaSayisi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BosYatakSayisi">Boş Yatak Sayısı</label>
            <input asp-for="BosYatakSayisi" class="form-control" type="text" />
            <span asp-validation-for="BosYatakSayisi" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>
