@model B221200015_WP_ODEV.Models.HocaMusaitlik

@{
    ViewData["Title"] = "Yeni Müsaitlik Ekle";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Yeni Müsaitlik Ekle</h2>
    <h2 class="text-center">Yeni Randevu Ekle</h2>
    <form asp-controller="HocaMusaitlik" asp-action="HocaMusaitlikAdd" method="post">
        <div class="form-group">
            <label asp-for="Hoca"></label>
            <select asp-for="HocaId" class="form-control">
                @foreach (var hoca in ViewBag.Hocalar as List<B221200015_WP_ODEV.Models.Hoca>)
                {
                    <option value="@hoca.Id">@hoca.Ad @hoca.Soyad</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Tarih" class="form-label"></label>
            <input asp-for="Tarih" class="form-control" type="date" />
        </div>
        <div class="form-group">
            <label asp-for="Saat" class="form-label"></label>
            <input asp-for="Saat" class="form-control" type="time" />
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>