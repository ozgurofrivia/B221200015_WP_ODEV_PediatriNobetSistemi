@model List<B221200015_WP_ODEV.Models.Hoca>

@{
    ViewData["Title"] = "Hoca Yönetimi";
}

<div class="container mt-4">
    <h2 class="text-center">Hoca Yönetimi</h2>
    <form asp-action="HocaList" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchTerm" class="form-control" placeholder="Hoca adı veya soyadı ara..." />
            <button type="submit" class="btn btn-primary">Ara</button>
        </div>
    </form>
    <div class="text-right mb-3">
        <a asp-action="HocaAdd" class="btn btn-success">Yeni Hoca Ekle</a>
    </div>
    <table class="table table-bordered" id="hocaTablosu">
        <thead>
            <tr>
                <th onclick="sortTable(0)">Id</th>
                <th onclick="sortTable(1)">Ad</th>
                <th onclick="sortTable(2)">Soyad</th>
                <th onclick="sortTable(3)">Telefon</th>
                <th onclick="sortTable(4)">E-posta</th>
                <th onclick="sortTable(5)">Bölüm</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hoca in Model)
            {
                <tr>
                    <td>@hoca.Id</td>
                    <td>@hoca.Ad</td>
                    <td>@hoca.Soyad</td>
                    <td>@hoca.Telefon</td>
                    <td>@hoca.Mail</td>
                    <td>@(hoca.Bolum != null ? hoca.Bolum.BolumAdi : "Bölüm Yok")</td>
                    <td>
                        <a asp-action="HocaUpdate" asp-route-id="@hoca.Id" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-action="HocaDelete" asp-route-id="@hoca.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function sortTable(columnIndex) {
        var table = document.getElementById("hocaTablosu");
        var rows = table.rows;
        var switching = true;
        var shouldSwitch;
        var i;
        var x, y;
        var switchCount = 0;

        while (switching) {
            switching = false;
            for (i = 1; i < (rows.length - 1); i++) {
                shouldSwitch = false;
                x = rows[i].getElementsByTagName("TD")[columnIndex];
                y = rows[i + 1].getElementsByTagName("TD")[columnIndex];
                if (x.innerHTML.toLowerCase() > y.innerHTML.toLowerCase()) {
                    shouldSwitch = true;
                    break;
                }
            }
            if (shouldSwitch) {
                rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                switching = true;
                switchCount++;
            }
        }
    }
</script>
